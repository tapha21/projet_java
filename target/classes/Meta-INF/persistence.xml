    <!-- Configuration pour PostgreSQL -->
    <persistence-unit name="Sama" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.entities.User</class>
        <class>com.entities.Client</class>
        <class>com.entities.Dette</class>
        <class>com.entities.Detail</class>
        <class>com.entities.Article</class>
        <class>com.entities.Paiement</class>
        <class>com.entities.Role</class> 
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <!-- Configuration des propriétés de la base de données PostgreSQL -->
        <properties>
            <!-- JDBC properties -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ges_dette"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="Taphatall01"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
 